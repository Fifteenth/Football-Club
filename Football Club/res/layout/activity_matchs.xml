<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@+drawable/bg_matchs"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >
        <!-- horizontal -->
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:textSize="14sp" 
            android:paddingLeft="20dp"
            android:text="@string/matches_season"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            />
        
        <!-- android:paddingTop="4dp" -->
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:textSize="22sp" 
            android:layout_gravity="right"
            android:text="@string/module_matchs"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_my"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:dividerHeight="2dip"
     	android:divider="#00000000"
     	android:choiceMode="singleChoice"
     	android:listSelector="@layout/listviewstyle_matches"
     	>
    </ListView>
    <!-- android:listSelector="#FF0000" -->
    <!-- android:cacheColorHint="#00000000"滑动listView时透明 -->

</LinearLayout>