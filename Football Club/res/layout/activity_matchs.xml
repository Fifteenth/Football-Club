<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@+drawable/bg_matchs"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        >
        <!-- horizontal -->
        
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:textSize="14sp" 
            android:paddingLeft="20dp"
            android:text="@string/matches_season"
            android:layout_alignParentLeft="true"
            android:paddingTop="10dp"
            />
        
        <!-- android:paddingTop="4dp" -->
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/crimson"
            android:textSize="22sp" 
            android:layout_gravity="right"
            android:text="@string/module_matchs"
            android:layout_alignParentRight="true"
            />
        
    </RelativeLayout>

    <ListView
        android:id="@+id/listView_my"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:dividerHeight="2dip"
        android:layout_marginTop="30dip"
     	android:divider="#00000000"
     	android:choiceMode="singleChoice"
     	android:listSelector="@layout/listviewstyle_matches"
     	>
    </ListView>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
	    <Button
	        android:id="@+id/button_matchAdd"
	        android:layout_width="160dp"
	        android:layout_height="36dp"
	        android:layout_centerInParent="true"
	        android:textSize="12sp"
	        android:text="@string/button_match_add"/>
    </RelativeLayout>
</RelativeLayout>