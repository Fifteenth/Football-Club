<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" 
    android:paddingTop="5dp"
    android:paddingLeft="10dp"
    android:minHeight="28dp"
	android:background="@layout/listviewstyle_finance"
    >
    

    <!-- two parts -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
        <!-- 1. -->
        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
		    <ImageView
		        android:id="@+id/img"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        />
		
		    <LinearLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/text"
		            android:layout_width="100dp"
		            android:layout_height="wrap_content"
		            android:textColor="#ff000000"
		            android:textSize="22sp" 
		            android:paddingLeft="20dp"
		            android:gravity="left"
		            />
		        
		        <TextView
		            android:id="@+id/title"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#ff000000"
		            android:textSize="22sp" 
		            android:text="@string/button_deductions"
		            android:paddingLeft="30dp"
		            android:gravity="left"
		            />
		        
		    </LinearLayout>
		    
		    <Button
		        android:id="@+id/button_down"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:textSize="12sp"  
		        android:paddingLeft="30dp"
		        android:layout_gravity="right"
		        />
	    </LinearLayout>
	    
	    
	    <!-- 2 -->
		<RelativeLayout
		    android:id="@+id/linearyoutDown"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
		    <Button
		        android:id="@+id/button_payment"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_marginLeft="10sp"
		        android:textSize="12sp"  
		        android:text="@string/button_payment"
		        />
	    
		    <Button
		        android:id="@+id/button_deductions"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerInParent="true"
		        android:textSize="12sp"  
		        android:text="@string/button_deductions"
		        />
		    
		    <Button
		        android:id="@+id/button_costDetails"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_marginRight="10sp"
		        android:textSize="12sp"  
		        android:text="@string/button_details"
		        />
		 </RelativeLayout>
		 
    </LinearLayout>
    
    

</RelativeLayout>