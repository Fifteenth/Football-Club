<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@layout/listviewstyle_matches"
    android:orientation="vertical">
    
    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_gravity="bottom"
	        >
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/orange"
	            android:textSize="22sp" 
	            android:paddingLeft="10dp"
	            android:paddingTop="10dp"
	            android:layout_gravity="left"
	            android:text="@string/module_matches"
	            android:layout_alignParentRight="true"
	            />
	        
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@color/orange"
	            android:textSize="14sp" 
	            android:paddingLeft="40dp"
	            android:text="@string/matches_season"
	            android:layout_alignParentLeft="true"
	            />
	        
	        
	    </LinearLayout>
	    
	    
	    <LinearLayout 
	        android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:background="@layout/listviewstyle_matches1"
		    android:orientation="horizontal" >
	        
	        <TextView
		        android:id="@+id/number"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:gravity="left"
		        android:layout_weight="1"
		        android:text="排名"
		        />
	    
		    <TextView
		        android:id="@+id/club"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="40dp"
		        android:paddingRight="40dp"
		        android:gravity="center"
		        android:layout_weight="3"
		        android:text="球队"
		        />
		    
		    <TextView
		        android:id="@+id/win"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="胜"
		        />
		    
		    <TextView
		        android:id="@+id/draw"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="平"
		        />
		    
		    <TextView
		        android:id="@+id/lose"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="负"
		        />
		    
		    <TextView
		        android:id="@+id/goalEnter"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="进球"
		        />
		    
		    <TextView
		        android:id="@+id/goalLose"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="失球"
		        />
		    
		    <TextView
		        android:id="@+id/goalDifference"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="净胜球"
		        />
		    
		    <TextView
		        android:id="@+id/integration"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:textColor="#ff000000"
		        android:textSize="12sp" 
		        android:paddingLeft="15dp"
		        android:gravity="right"
		        android:layout_weight="1"
		        android:text="积分"
		        />
	    </LinearLayout>
	    
	    
	    
	    <com.ff.widgets.WaitingPointBar
	        android:id="@+id/waitingPointBar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="60dp">
		    
	    </com.ff.widgets.WaitingPointBar>
	
	    <ListView
	        android:id="@+id/listview_league"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:cacheColorHint="#00000000"
	        android:dividerHeight="0dip"
	        android:layout_marginTop="0dip"
	        android:layout_marginBottom="40dip"
	     	android:divider="#00000000"
	     	android:choiceMode="singleChoice"
	     	android:listSelector="@android:color/transparent"  
	     	>
	    </ListView>
    
</LinearLayout>